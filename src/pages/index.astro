        <div class="grid lg:grid-cols-[280px_1fr] gap-8">
          <!-- Left: Tabs -->
          <div class="space-y-3">
            <button class="info-tab active" data-tab="agenda">Agenda</button>
            <button class="info-tab" data-tab="event">Event</button>
            <button class="info-tab" data-tab="hotel">Hotel</button>
            <button class="info-tab" data-tab="travel">Travel</button>
            <button class="info-tab" data-tab="general">General</button>
          </div>

          <!-- Right: Content -->
          <div class="bg-stone-100 rounded-2xl p-6 lg:p-8 min-h-[500px]">
            <!-- Agenda Tab -->
            <div id="tab-agenda" class="tab-content">
              <h3 class="text-2xl font-bold text-stone-900 mb-6">Four Days in Barcelona</h3>

